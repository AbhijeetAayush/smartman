{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": ["modules/**/*", "utils/**/*", "types/**/*"],
    "exclude": ["node_modules", ".aws-sam"]
}
